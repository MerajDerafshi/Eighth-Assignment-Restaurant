<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="800.0" spacing="15" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ap.restaurant.restaurant.controller.SignUpController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label style="-fx-font-size: 24px;" text="Sign Up">
      <VBox.margin>
         <Insets bottom="90.0" />
      </VBox.margin></Label>
    <TextField fx:id="usernameField" maxWidth="250" promptText="Username">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></TextField>
    <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></PasswordField>
    <PasswordField fx:id="confirmPasswordField" maxWidth="250" promptText="Confirm Password">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></PasswordField>
   <TextField fx:id="emailField" maxWidth="250.0" promptText="Email" />
    <Button maxWidth="150" onAction="#handleSignUp" text="Sign Up">
      <VBox.margin>
         <Insets top="90.0" />
      </VBox.margin></Button>
    <Label fx:id="messageLabel" textFill="red" />
   <Label maxWidth="250.0" prefHeight="17.0" prefWidth="250.0" textAlignment="CENTER" />

</VBox>
