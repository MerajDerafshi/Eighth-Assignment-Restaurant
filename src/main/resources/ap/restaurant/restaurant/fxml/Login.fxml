<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="550" prefWidth="800" spacing="15" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ap.restaurant.restaurant.controller.LoginController">

    <Label style="-fx-font-size: 24px;" text="Login">
      <VBox.margin>
         <Insets bottom="100.0" />
      </VBox.margin></Label>

    <TextField fx:id="usernameField" maxWidth="250" promptText="Username">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></TextField>
    <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></PasswordField>

    <Button maxWidth="150" onAction="#handleLogin" text="Login">
      <VBox.margin>
         <Insets top="100.0" />
      </VBox.margin></Button>
    <Label fx:id="messageLabel" textFill="red" />
</VBox>
